---
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";
import Sectionhead from "@components/sectionhead.astro";

import { features } from "@utils/features";
---

<Layout>
  <Container>
    <Sectionhead>
      <Fragment slot="title">Nuestros servicios</Fragment>
      <Fragment slot="desc">Enterate como podemos ayudarte</Fragment>
    </Sectionhead>

    <main class="mt-16">
      <div class="grid md:grid-cols-2 gap-8">
        {
          features.map((item) => (
            <>
              <div>
                <h3 class="font-semibold text-xl mb-1">{item.title}</h3>{" "}
                <p class="font-normal text-md text-justify">
                  {item.description}
                </p>
              </div>
            </>
          ))
        }
      </div>
    </main>
  </Container>
</Layout>
